<%- include('partials/header2') -%>

  <div class="container mt-5">
    <div>
      <p><strong>User Name</strong>: <%= user.userName %>
      </p>
      <p><strong>Email</strong>: <%= user.email %>
      </p>
    </div>
    <div class="row justify-content-center">

      <div class="card">
        <div class="mt-5">
          <h2>Add a post</h2>
          <form action="/post/createPost" enctype="multipart/form-data" method="POST">
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input type="text" class="form-control" id="title" name="title">
            </div>
            <div class="mb-3">
              <label for="caption" class="form-label">Caption</label>
              <textarea class="form-control" id="caption" name="caption"></textarea>
            </div>
            <div class="mb-3">
              <label for="imgUpload" class="form-label">Image</label>
              <input type="file" class="form-control" id="imageUpload" name="file">
            </div>
            <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
          </form>
        </div>
      </div>

      <div class="container mt-5">
        <h3 class="text-center">Previous Posts</h3>
        <ul class="row justify-content-center mt-5">
          <% for(var i=0; i<posts.length; i++) {%>
            <div class="card m-2">
              <div class="card-img-top text-center pt-3">
                <li class="">
                  <a href="/post/<%= posts[i]._id%>">
                    <img class="resize-img" src="<%= posts[i].image%>">
                  </a>
                </li>
              </div>
              <div class="card-body">
                <h5 class="card-title">
                  <%= posts[i].title%>
                </h5>
                <p>
                  posted by: <%= posts[i].userName%>
                </p>
                <p class="card-text">
                  Likes: <%= posts[i].likes%> <br />
                    <%= posts[i].caption%>
                </p>

              </div>
            </div>
            <% } %>
        </ul>
      </div>

    </div>
  </div>

  <%- include('partials/footer') -%>