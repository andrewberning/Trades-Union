<%- include('partials/header2') -%>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-lg-6">
        <div class="card">
          <div class="card-body">
            <h2 class="text-center">
              <%= post.title %>
            </h2>
            <div class="middle-image text-center mt-3">
              <img class="resize-img" src="<%= post.image%>" />
            </div>
            <p>
              posted by: <%= post.userName%>
            </p>
            <div class="card">
              <div class="card-body">
                <p class="card-text">
                  <%= post.caption%>
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="row mt-3 justify-content-around">
          <form class="col-2" action="/post/likePost/<%= post.id %>?_method=PUT" method="POST">
            <button class="btn btn-primary fa fa-heart" type="submit"></button>
          </form>
          <h5 class="col-2">Likes: <%= post.likes %>
          </h5>
          <%if(post.user==user.id){ %>
            <form action="/post/deletePost/<%= post.id %>?_method=DELETE" method="POST" class="col-3">
              <button class="btn btn-primary fa fa-trash" type="submit"></button>
            </form>
            <%}%>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="row">
          <h2>Add a comment</h2>
          <form action="/comment/createComment/<%=post._id%>" method="POST">
            <div class="mb-3">
              <label for="comment" class="form-label">Comment</label>
              <input type="text" class="form-control" id="comment" name="comment">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
        <div class="row mt-5">
          <ul>
            <% for(var i=0; i<comments.length; i++) {%>
              <li class="col-12 justify-content-between mt-3">
                <%= comments[i].comment%> - <%= comments[i].userName%>
              </li>
              <% } %>
          </ul>
        </div>
      </div>


      <div class="row">
        <div class="d-flex my-5 justify-content-around">
          <a class="btn btn-primary" href="/profile">Return to Profile</a>
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>
      </div>
    </div>

  </div>

  <%- include('partials/footer') -%>